  "license": "MIT",
  "lint-staged": {
    "*": [
      "biome check --fix --no-errors-on-unmatched",
      "eslint --fix"
    ]
  },
  "name": "@liveryvideo/biome-lit",
  "peerDependencies": {
    "@biomejs/biome": ">=2",
    "eslint": ">=9"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": "github:liveryvideo/biome-lit",
  "scripts": {
    "lint": "biome check && eslint",
    "lint:fix": "eslint --fix && biome check --fix",
    "prepare": "husky",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "type": "module",
  "version": "2.2.1"
}
